<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SufiIshq" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="backgroundColor">@color/light_background</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_primary_variant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorSecondaryVariant">@color/light_secondary_variant</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/status_bar_light</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SufiIshq.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SufiIshq.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SufiIshq.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>